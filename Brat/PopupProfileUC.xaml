<UserControl x:Class="Brat.PopupProfileUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brat"
             mc:Ignorable="d" d:DesignWidth="360"
             FontFamily="pack://application:,,,/Brat;component/Fonts/#SF Pro Rounded" KeyDown="Window_KeyDown">
    <UserControl.Resources>
        <Geometry x:Key="PencilGeometry">
            M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25z M20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34a1.003 1.003 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.83z
        </Geometry>
    </UserControl.Resources>
    <Border Background="#2E2E2E"
        CornerRadius="20"
        Padding="20"
        Width="360">
        <StackPanel>

            <Button Click="Close_Click" Width="25" Height="25" HorizontalAlignment="Right" MouseMove="Button_MouseMove" x:Name="ButtonX" MouseLeave="Button_MouseLeave">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="#FF2E2E2E">
                                        <!-- Контент кнопки -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Viewbox Width="25" Height="25">
                                            <Canvas Width="25" Height="25">
                                                <Path x:Name="XPath"
                                                Data="M6,6 L18,18 M6,18 L18,6"
                                                Stroke="Black"
                                                StrokeThickness="2"
                                                StrokeStartLineCap="Round"
                                                StrokeEndLineCap="Round"
                                                StrokeLineJoin="Round"
                                                Fill="{x:Null}" Width="25" Height="25"
                                                      MouseMove="Button_MouseMove" MouseLeave="Button_MouseLeave"/>
                                            </Canvas>
                                        </Viewbox>

                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <!-- Убираем подсветку при наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <!-- Убираем подсветку при нажатии -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

            </Button>
            <!-- Верх: аватар и имя -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Ellipse Width="72" Height="72">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Fonts/MenuIcon.apng" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                        Margin="0, 0, 10, 0"
                    x:Name="MainName"
                    Text="Грант Упизмо" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"/>
                        <Button Click="Edit_Click" Width="25" Height="25" HorizontalAlignment="Right" MouseMove="Button_MouseMove" x:Name="ButtonEdit" MouseLeave="Button_MouseLeave" Visibility="Hidden">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid Background="#FF2E2E2E">
                                                    <!-- Контент кнопки -->
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    <Viewbox Width="15" Height="15">
                                                        <Canvas Width="25" Height="25">
                                                            <Path x:Name="EditPath"
                                                          Data="{StaticResource PencilGeometry}"
                                                          Stretch="Uniform"
                                                          Width="25" Height="25"
                                                          RenderTransformOrigin="0.5,0.5" Fill="Black" MouseMove="Button_MouseMove" MouseLeave="Button_MouseLeave" Stroke="Black"/>
                                                        </Canvas>
                                                    </Viewbox>

                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <!-- Убираем подсветку при наведении -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                    <!-- Убираем подсветку при нажатии -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>

                        </Button>
                    </StackPanel>
                    <TextBlock 
                    x:Name="NetworkStatus"
                    Text="был(а) недавно" 
                           FontSize="14" 
                           Foreground="#AAAAAA"/>
                </StackPanel>
            </StackPanel>

            <Separator Margin="0,8"/>

            <!-- Контактные данные -->
            <StackPanel Margin="0,8,0,12">
                <TextBlock Text="Телефон" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="PhoneNumber"  Text="8-800-555-35-35" FontSize="14" Foreground="White" Margin="0,2,0,8"/>

                <TextBlock Text="О себе" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="AboutSelf" Text="Я люблю есть какашки" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
                <TextBlock Text="Имя пользователя" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="Username" Text="@kaloed" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
                <TextBlock Text="Дата рождения" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="DateOfBirthday" Text="21.04.2006" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
            </StackPanel>

            <Separator Margin="0,4"/>

            <!-- Кнопки -->

        </StackPanel>
    </Border>
</UserControl>
