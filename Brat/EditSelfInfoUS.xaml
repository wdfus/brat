<UserControl x:Class="Brat.EditSelfInfoUS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brat"
             mc:Ignorable="d" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" d:DesignWidth="360">
    <Border Background="#2E2E2E"
        CornerRadius="20"
        Padding="20"
        Width="360">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Click="Close_Click" MouseMove="Button_MouseMove" x:Name="ButtonBack" MouseLeave="Button_MouseLeave" Margin="4,0,4,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="#FF2E2E2E">
                                            <!-- Контент кнопки -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Viewbox Width="25" Height="25">
                                                <Canvas Width="25" Height="25">
                                                    <Path x:Name="XPath"
            Data="M15,6 L9,12 L15,18"
            Stroke="Black"
            StrokeThickness="2"
            StrokeStartLineCap="Round"
            StrokeEndLineCap="Round"
            StrokeLineJoin="Round"
            Fill="Transparent" Width="25" Height="25"/>
                                                </Canvas>
                                            </Viewbox>

                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!-- Убираем подсветку при наведении -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                            <!-- Убираем подсветку при нажатии -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                </Button>
                <TextBlock Grid.Column="1" FontSize="12" Text="Информация" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Height="14"/>
                <Button Grid.Column="2" Click="Close_Click" MouseMove="Button_MouseMove" x:Name="ButtonX" MouseLeave="Button_MouseLeave" Margin="4,0,4,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="#FF2E2E2E">
                                            <!-- Контент кнопки -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Viewbox Width="25" Height="25">
                                                <Canvas Width="25" Height="25">
                                                    <Path x:Name="XPath"
                            Data="M6,6 L18,18 M6,18 L18,6"
                            Stroke="Black"
                            StrokeThickness="2"
                            StrokeStartLineCap="Round"
                            StrokeEndLineCap="Round"
                            StrokeLineJoin="Round"
                            Fill="Transparent" Width="25" Height="25"/>
                                                </Canvas>
                                            </Viewbox>

                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!-- Убираем подсветку при наведении -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                            <!-- Убираем подсветку при нажатии -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                </Button>
            </Grid>
            <TextBlock Text="Имя" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="NameTextBox"  Watermark="Имя..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBlock Text="Фамилия" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="SecondTextBox"  Watermark="Фамилия..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBlock Text="Номер телефона" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="PhoneNumberTextBox"  Watermark="Номер..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBlock Text="О себе" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="AboutSelfTextBox"  Watermark="О себе..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBlock Text="Имя пользователя" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="UsernameTextBox"  Watermark="Имя..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBlock Text="Дата рождения" FontSize="12" Foreground="#888"/>
            <xctk:WatermarkTextBox x:Name="DoBTextBox"  Watermark="11.05.2006..." FontSize="14" Foreground="White" Margin="0,2,0,8" Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>
    </Border>
</UserControl>
