<UserControl x:Class="Brat.Sender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brat"
             mc:Ignorable="d" 
             FontFamily="pack://application:,,,/Brat;component/Fonts/#SF Pro Rounded"
             MaxWidth="385"
             Tag="ReadStatus">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Col.AppBg"     Color="#2D2D2D"/>
        <SolidColorBrush x:Key="Col.Rail"      Color="#5A5A5A"/>
        <SolidColorBrush x:Key="Col.Side"      Color="#3A3A3A"/>
        <SolidColorBrush x:Key="Col.Top"       Color="#444444"/>
        <SolidColorBrush x:Key="Col.Input"     Color="#444444"/>
        <SolidColorBrush x:Key="Col.BubbleL"   Color="#E6E6E6"/>
        <SolidColorBrush x:Key="Col.BubbleR"   Color="#0078D7"/>

        <Style x:Key="BubbleLeft" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.BubbleR}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>


    <Border Style="{StaticResource BubbleLeft}" HorizontalAlignment="Left">
        <StackPanel>
            <TextBlock x:Name="messageText" TextWrapping="Wrap" Text="Привет!Привет!Привет!!Привет!!Привет!!Привет!!Привет!!вет!!Привет!!Привет!!Привет!!Привет!!Привет!!Привет!Привет!Пт!!Привет!!Привет!!Привет!Привет!Привет!Привет!Привет!Привет!Привет!Привет!" Foreground="White"/>
            <TextBlock x:Name="MessageDate" Text="15:01" HorizontalAlignment="Right" Foreground="#FFBCBCBC" FontSize="10"/>
        </StackPanel>
    </Border>
</UserControl>
