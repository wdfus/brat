<Window x:Class="Brat.PopupProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_PreviewKeyDown"
    WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Topmost="True" 
        FontFamily="pack://application:,,,/Brat;component/Fonts/#SF Pro Rounded" KeyDown="Window_KeyDown"  >

    <Border Background="#2E2E2E"
            CornerRadius="20"
            Padding="20"
            Width="360">
        <StackPanel>

            <Button Click="Close_Click" Width="25" Height="25" HorizontalAlignment="Right" MouseMove="Button_MouseMove" x:Name="ButtonX" MouseLeave="ButtonX_MouseLeave">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="#FF2E2E2E">
                                        <!-- Контент кнопки -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Viewbox Width="25" Height="25">
                                            <Canvas Width="25" Height="25">
                                                <Path x:Name="XPath"
                                                    Data="M6,6 L18,18 M6,18 L18,6"
                                                    Stroke="Black"
                                                    StrokeThickness="2"
                                                    StrokeStartLineCap="Round"
                                                    StrokeEndLineCap="Round"
                                                    StrokeLineJoin="Round"
                                                    Fill="Transparent" Width="25" Height="25"/>
                                            </Canvas>
                                        </Viewbox>

                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <!-- Убираем подсветку при наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <!-- Убираем подсветку при нажатии -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

            </Button>
            <!-- Верх: аватар и имя -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Ellipse Width="72" Height="72">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Fonts/MenuIcon.apng" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="MainName"
                        Text="Грант Упизмо" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock 
                        x:Name="NetworkStatus"
                        Text="был(а) недавно" 
                               FontSize="14" 
                               Foreground="#AAAAAA"/>
                </StackPanel>
            </StackPanel>

            <Separator Margin="0,8"/>

            <!-- Контактные данные -->
            <StackPanel Margin="0,8,0,12">
                <TextBlock Text="Телефон" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="PhoneNumber"  Text="8-800-555-35-35" FontSize="14" Foreground="White" Margin="0,2,0,8"/>

                <TextBlock Text="О себе" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="AboutSelf" Text="Я люблю есть какашки" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
                <TextBlock Text="Имя пользователя" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="Username" Text="@kaloed" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
                <TextBlock Text="Дата рождения" FontSize="12" Foreground="#888"/>
                <TextBlock x:Name="DateOfBirthday" Text="21.04.2025" FontSize="14" Foreground="White" Margin="0,2,0,8"/>
            </StackPanel>

            <Separator Margin="0,4"/>

            <!-- Кнопки -->

        </StackPanel>
    </Border>
</Window>
