<UserControl x:Class="Brat.MessageCloud"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Brat"
             mc:Ignorable="d" 
             FontFamily="pack://application:,,,/Brat;component/Fonts/#SF Pro Rounded"
             MaxWidth="480"
             Tag="StatusRead">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Col.AppBg"     Color="#2D2D2D"/>
        <SolidColorBrush x:Key="Col.Rail"      Color="#5A5A5A"/>
        <SolidColorBrush x:Key="Col.Side"      Color="#3A3A3A"/>
        <SolidColorBrush x:Key="Col.Top"       Color="#444444"/>
        <SolidColorBrush x:Key="Col.Input"     Color="#444444"/>
        <SolidColorBrush x:Key="Col.BubbleL"   Color="#E6E6E6"/>
        <SolidColorBrush x:Key="Col.BubbleR"   Color="#0078D7"/>

        <Style x:Key="BubbleSender" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.BubbleR}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="BubbleReciever" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Col.BubbleL}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="TextSender" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="TextReciever" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Left" x:Name="MessageId">

        <Border Style="{StaticResource BubbleSender}" x:Name="Bubble">
            <StackPanel Orientation="Vertical" x:Name="StackBubble">
                <Image x:Name="Capture" 
                           Source="/xxx.jpg"
                       Stretch="UniformToFill"
                       Loaded="AvatarImage_Loaded"
                       SizeChanged="AvatarImage_SizeChanged"/>  
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Margin="0, 0, 0, 0" Style="{StaticResource TextSender}" FontSize="14" x:Name="messageText" TextWrapping="Wrap" Text="" MaxWidth="370" HorizontalAlignment="Left"/>
                    <StackPanel Orientation="Horizontal" x:Name="StackTimeStatus" Loaded="StackTimeStatus_Loaded" HorizontalAlignment="Right">
                        <TextBlock x:Name="MessageDate" Text="15:01" HorizontalAlignment="Right" FontSize="10" Foreground="#FF8B8B8B" VerticalAlignment="Bottom" Margin="10,0,0,0"/>
                        <TextBlock x:Name="ReadStatus" Text="notread" HorizontalAlignment="Right" FontSize="10" Foreground="#FF8B8B8B" VerticalAlignment="Bottom" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Ответить" />
                    <MenuItem Header="Переслать"/>
                    <MenuItem Header="Удалить" Click="MenuItem_Click" />
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </Grid>
</UserControl>
