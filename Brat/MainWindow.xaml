<Window x:Class="Brat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brat"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2D2D2D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.RowSpan="3">
            <!-- Левая панель -->
            <Border Grid.RowSpan="3" Grid.Column="0" Background="#FF3A3A3A" RenderTransformOrigin="0.5,0.5">

                <StackPanel>
                    <Button Content="Я даун" Width="40" Height="40" Margin="5" DockPanel.Dock="Top"/>
                    <StackPanel Orientation="Vertical"/>
                </StackPanel>
            </Border>
            <Border Grid.RowSpan="3" Grid.Column="0" Background="#FF3A3A3A">
                <StackPanel>
                    <Button Content="Я даун" Width="40" Height="40" Margin="5" DockPanel.Dock="Top" FontFamily=""/>
                    <StackPanel Orientation="Vertical">
                        <DockPanel Height="57" Background="AliceBlue">
                            <Ellipse Fill="Red" Height="40" Width="40" Margin="3, 0, 3, 0"/>
                            <StackPanel DockPanel.Dock="Left" Width="117">
                                <TextBlock TextWrapping="Wrap" Text="Ваня" FontSize="8" FontWeight="Bold" FontFamily="Algerian" Height="23"/>
                                <TextBlock Text="привет! меня зовут хуила" FontSize="10" Height="19"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 5, 2, 0" Orientation="Horizontal">
                                <TextBlock Text="^^" FontSize="8" Margin="0, 0, 3, 0"/>
                                <TextBlock Text="12:28" FontSize="8"/>
                            </StackPanel>
                        </DockPanel>
                        <Separator Height="0.5" Margin="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- Шапка -->
        <Border Grid.Column="1" Grid.Row="0" Background="#FF444444">
            <TextBlock Text="Заголовок чата" VerticalAlignment="Center"
                       Margin="10" Foreground="White" FontWeight="Bold"/>
        </Border>

        <!-- Сообщения -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="White">
            <StackPanel Margin="10">
                <Border Background="#E6E6E6" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Left">
                    <TextBlock Text="Привет!"/>
                </Border>
                <Border Background="#0078D7" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="Здорово!" Foreground="White"/>
                </Border>
                <Border Background="#E6E6E6" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Left">
                    <TextBlock Text="Как дела?"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Поле ввода -->
        <DockPanel Grid.Column="1" Grid.Row="2" Background="#FF444444">
            <TextBox Margin="10" VerticalAlignment="Center" Height="40"
                     HorizontalAlignment="Stretch"/>
            <Button Content="➤" Width="50" Margin="10" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
