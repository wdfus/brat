<Window x:Class="Brat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brat"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2D2D2D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Левая панель -->
        <Border Grid.RowSpan="3" Grid.Column="0" Background="#FF3A3A3A">
            <DockPanel>
                <Button Content="Я" Width="40" Height="40" Margin="5" DockPanel.Dock="Top"/>
                <TextBox Margin="5" Height="30"/>
                <ListBox Margin="5" Background="#FF2D2D2D" Foreground="White">
                    <ListBoxItem Content="Чат 1"/>
                    <ListBoxItem Content="Чат 2"/>
                    <ListBoxItem Content="Чат 3"/>
                    <ListBoxItem Content="Чат 4"/>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Шапка -->
        <Border Grid.Column="1" Grid.Row="0" Background="#FF444444">
            <TextBlock Text="Заголовок чата" VerticalAlignment="Center"
                       Margin="10" Foreground="White" FontWeight="Bold"/>
        </Border>

        <!-- Сообщения -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="White">
            <StackPanel Margin="10">
                <Border Background="#E6E6E6" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Left">
                    <TextBlock Text="Привет!"/>
                </Border>
                <Border Background="#0078D7" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="Здорово!" Foreground="White"/>
                </Border>
                <Border Background="#E6E6E6" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Left">
                    <TextBlock Text="Как дела?"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Поле ввода -->
        <DockPanel Grid.Column="1" Grid.Row="2" Background="#FF444444">
            <TextBox Margin="10" VerticalAlignment="Center" Height="40"
                     HorizontalAlignment="Stretch"/>
            <Button Content="➤" Width="50" Margin="10" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
